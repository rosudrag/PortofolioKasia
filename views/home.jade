    main.Site-content.xs-mt-5
      div.row.middle-xs
        div.col-xs-12.col-sm-6
          div.row.center-xs
            +img-circle-responsive("/kasia-round-75.png","Circle image")
        div.col-xs-12.col-sm-6
          div.row.center-xs
            div.col-xs-12
              h1 Katarzyna Niedziela
            div.col-xs-12
              h2 Writter
            div.col-xs-12
              button
                span.glyphicon.glyphicon-envelope
                span Contact Me
      div.row.center-xs
        div.col-xs-12
          span Contact info
      div.row.center-xs
        div.col-xs-12.center-xs.is-hidden
          button button-music
          button button-business
        div.col-xs-6.music-panel
          span left
        div.col-xs-6.business-panel
          span right

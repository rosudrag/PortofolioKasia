mixin top()
  div.row.light-green.center-xs
    div.col-xs-12.col-md-9
      div.flex-container
        div.xs-mt-10.xs-mb-10
          div.row.middle-xs
            div.col-xs-12.col-sm-6
              div.row.center-xs
                +img-circle-responsive("/kasia-round-75.png","Circle image")
            div.col-xs-12.col-sm-6
              div.row.center-xs.bottom-xs
                div.col-xs-12
                  h1.h2
                    strong Katarzyna Niedziela
                div.col-xs-12
                  h2.h3 Looking for new opportunities
                div.col-xs-12.center-xs
                  div.row.center-xs
                    +contact-me

mixin contact-me()
  div.row.middle-xs
    div.col-xs-6
      a(class="btn btn-success" href="mailto:ka.niedziel@gmail.com")
        span.glyphicon.glyphicon-envelope
        span.xs-pl-10 Contact Me
    div.col-xs-6
      a(class="btn btn-social-icon btn-linkedin" href="https://uk.linkedin.com/in/katarzyna-niedziela-a4895b5b/en")
        span.fa.fa-linkedin 
